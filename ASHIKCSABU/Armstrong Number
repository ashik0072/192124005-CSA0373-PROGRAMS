#include<stdio.h>
#include<math.h>
void main()
{
	int n,count=0,a,b,c,sum=0;
	printf("Enter a number:");
	scanf("%d",&n);
	a=n;
	c=n;
	while(a>0)
	{
		a/=10;
		count++;
	}
	while(c>0)
	{
		b=c%10;
		sum+=pow(b,count);
		c/=10;
	}
	if(sum==n)
	{
		printf("%d is an Armstrong number",n);
	}
	else
	{
		printf("%d is not an Armstrong number",n);
	}
}


OUTPUT:
Enter a number:153
153 is an Armstrong number
